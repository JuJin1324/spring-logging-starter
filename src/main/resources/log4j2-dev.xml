<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <property name="logsPath">./logs</property>
        <property name="wasLogPath">./was-logs</property>
        <property name="layoutPattern"
                  value="[%d{yyyy-MM-dd HH:mm:ss.SSS z}{Asia/Seoul}] [%thread] %-5level %logger{36} - %msg%n"/>
        <property name="maxFileSize">10MB</property>
        <property name="maxHistory">180</property>
    </Properties>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${layoutPattern}"/>
        </Console>

        <RollingFile name="INFO_LOG">
            <LevelRangeFilter minLevel="INFO" maxLevel="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <FileName>${logsPath}/info.log</FileName>
            <FilePattern>${wasLogPath}/info.%d{yyyy-MM-dd}.%i.log.gz</FilePattern>
            <PatternLayout>
                <Pattern>${layoutPattern}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="${maxFileSize}"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxHistory}" fileIndex="max">
                <Delete basePath="${wasLogPath}" maxDepth="1">
                    <IfFileName glob="info.*.log.gz"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <RollingFile name="ERROR_LOG">
            <LevelRangeFilter minLevel="ERROR" maxLevel="FATAL" onMatch="ACCEPT" onMismatch="DENY"/>
            <FileName>${logsPath}/error.log</FileName>
            <FilePattern>${wasLogPath}/error.%d{yyyy-MM-dd}.%i.log.gz</FilePattern>
            <PatternLayout>
                <Pattern>${layoutPattern}</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="${maxFileSize}"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxHistory}" fileIndex="max">
                <Delete basePath="${wasLogPath}" maxDepth="1">
                    <IfFileName glob="error.*.log.gz"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="STDOUT"/>
        </Root>

        <logger name="starter.spring.logging.runner" level="INFO" additivity="false">
            <AppenderRef ref="INFO_LOG"/>
            <AppenderRef ref="ERROR_LOG"/>
        </logger>
    </Loggers>
</Configuration>
